{
  "name": "rlm",
  "version": "1.0.0",
  "description": "Recursive Language Model - LLMs hooked to REPLs with recursive sub-agent spawning and pass-by-reference context",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "rlm": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts --clean",
    "dev": "tsx src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "demo": "tsx src/demo.ts",
    "benchmark": "tsx src/benchmark.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
